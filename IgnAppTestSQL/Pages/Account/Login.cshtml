@page
@using IgnAppTestSQL.Data
@using Microsoft.AspNetCore.Identity
@model IgnAppTestSQL.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

@inject SignInManager<IgniteUser> UserManager


<h1>Login</h1>

<div class="card row" style="background-color: #d2d1d1; padding: 25px; margin-top: 20px; border-radius: 0;">
    <div>
        <form method="post">


            @if (!UserManager.IsSignedIn(User))
            {
                <div class="form-group">
                    <div class="row">
                        <div class="col-4">
                            <label asp-for="Input.Email"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Input.Email" />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-4">
                            <label asp-for="Input.Password"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Input.Password" />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-4">
                            <label asp-for="Input.RememberMe"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Input.RememberMe" type="checkbox" />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-4">
                        </div>
                        <div class="col-8">
                            <button type="submit" class="form-control btn btn-success">Register</button>
                        </div>
                    </div>
                </div>
            }
        </form>
    </div>
</div>
